{
	"compilerOptions": {
		"target": "es6",
		"module": "es2020",
		"lib": [
			"esnext",
			"dom"
		],
		"moduleResolution": "node",
		
		"rootDir": "src",
		"baseUrl": ".",
		"paths": {
			"$/*": ["./src/*"],
		},
		
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		
		"types": [
			"vite/client",
			"svelte",
			"@roxi/routify"
		],
		"typeRoots": [
			"@types",
			"./node_modules/@types"
		],
		
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"alwaysStrict": true,
		
		"noEmitOnError": true,
		"skipLibCheck": true,
		"importsNotUsedAsValues": "error"
	},
	"include": [
		"src/**/*",
		"@types"
	],
}